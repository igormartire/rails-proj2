<div class="page">
<h1>User</h1>
  <br/>
  <p>E-mail: <%=@user.email%></p>
  <br/>
  <% if @user == current_user %>
    <%= link_to 'Add item', items_new_path, class: "btn btn-primary" %>
  <% end %>
  <br/>
  <div class="row">
    <h2>Available Items</h2>
  </div>
  <div class="row">
    <%= render @user.items.where "available = true"%>
  </div>
  <% if @user == current_user %>
    <div class="row">
      <h2>Unavailable Items</h2>
    </div>
    <div class="row">
      <%= render @user.items.where "available = false"%>
    </div>
  <% end %>
</div>
