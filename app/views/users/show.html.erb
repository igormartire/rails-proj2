<div class="page">
<h1>User Profile</h1>
  <br/>
  <p>E-mail: <%=ActionView::Helpers::UrlHelper.mail_to(@user.email)%></p>
  <br/>
  <% if @user == current_user %>
    <%= link_to 'Add item', items_new_path, class: "btn btn-success btn-lg" %>
  <% end %>
  <br/>
  <br/>
  <div class="row">
    <h2>Available Items</h2>
  </div>
  <div class="row">
    <% @items = @user.items.where "available = true" %>
    <% if @items.empty? %>
      <p>No available items.</p>
    <% else %>
      <%= render @items %>
    <% end %>
  </div>
  <% if @user == current_user %>
    <div class="row">
      <h2>Unavailable Items</h2>
    </div>
    <div class="row">
      <% @un_items = @user.items.where "available = false" %>
      <% if @un_items.empty? %>
        <p>No unavailable items.</p>
      <% else %>
        <%= render @un_items%>
      <% end %>
    </div>
  <% end %>
</div>
