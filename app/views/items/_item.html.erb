<div class="col-sm-6 col-md-4">
  <div class="item">
    <% if @user and @user == current_user %>
      <%= link_to "Edit item", edit_item_path(item.id), class: "btn btn-warning edit_button" %>
      <%= link_to "Remove item", item_path(item.id), method: :delete, class: "btn btn-danger remove_button" %>
    <% end %>
    <div style="font-weight:bold">
      <%= link_to item.name, item %>
    </div>
      User: <%= link_to User.find(item.user_id).username, user_path(item.user_id) %> <br>
      Price: <%= ActionController::Base.helpers.number_to_currency(item.price) %> <br>
      <% if item.avatar.file? %>
        <%= image_tag item.avatar.url, :class => "img-responsive"  %>
      <% else %>
        <%= image_tag image_url("missing.png"), :class => "img-responsive"  %>
      <% end %>
  </div>
</div>
