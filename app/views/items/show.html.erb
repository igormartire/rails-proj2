<div class="page">
  <h1>Item Page</h1>
  <br/>
  <h2>Name: <%=@item.name%></h2>
  <p>User: <%= link_to User.find(@item.user_id).username, user_path(@item.user_id)%></p>
  <p>Price: <%= ActionController::Base.helpers.number_to_currency(@item.price) %></p>
  <p><strong>Description: </strong><%=@item.description%></p>
  <div style="width: 300px; height: 300px;">
    <% if @item.avatar.file? %>
      <%= image_tag @item.avatar.url, :class => "img-responsive"%>
    <% else %>
      <%= image_tag image_url("missing.png"), :class => "img-responsive" %>
    <% end %>
  </div>
  <br>
  <%= react_component('CommentBox', {:presenter => @presenter.to_json}, {:prerender => true}) %>
</div>
